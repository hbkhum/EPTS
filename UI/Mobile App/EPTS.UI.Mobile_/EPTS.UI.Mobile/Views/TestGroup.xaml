<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPTS.UI.Mobile.Views.TestGroup">
  <ContentView.Content>
      <StackLayout>
            <Label Text="{Binding TestPlanViewModel.TestPlan.TestPlanName}"></Label>
            <ListView ItemsSource="{Binding TestPlanViewModel.TestPlan.TestGroup}"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                       Padding="5, 0">
                                <Label Text="{Binding Description}"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
      </StackLayout>
  </ContentView.Content>
</ContentView>